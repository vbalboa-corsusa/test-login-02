<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dragonball API</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">
                <div class="text-center mb-4">
                    <h4>Dragonball API</h4>
                </div>
                <nav>
                    <a href="/" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                        <i class="bi bi-house-door"></i> Inicio
                    </a>
                    <a href="/Personajes" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Personajes" ? "active" : "")">
                        <i class="bi bi-people"></i> Personajes
                    </a>
                    <a href="/Planetas" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Planetas" ? "active" : "")">
                        <i class="bi bi-globe"></i> Planetas
                    </a>
                    <a href="/Razas" class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Razas" ? "active" : "")">
                        <i class="bi bi-person-badge"></i> Razas
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Dragonball API
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
